# Production Environment Variables
# Copy to .env and configure

# Django
SECRET_KEY=change-this-to-random-50-character-string
DEBUG=False
DJANGO_SETTINGS_MODULE=asosiy.settings_production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,yourapp.railway.app

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Or SQLite for simple deployments
# DATABASE_URL=sqlite:///db.sqlite3

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# CORS (comma-separated origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Sentry (optional, error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Production-specific
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
